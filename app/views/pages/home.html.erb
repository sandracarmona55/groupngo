<div class="container">

  <div class="row categories-all">
    <div class="col-4 p-1">
      <%= link_to activities_path(category:'Culture') do %>
        <div class="card-categories">
          <%= image_tag "museum_icon.png", class: 'image' %>
          <p> Culture </p>
        </div>
      <% end %>
    </div>

    <div class="col-4 p-1">
      <%= link_to activities_path(category:'Sports') do %>
        <div class="card-categories">
          <%= image_tag "basketball_icon.png", class: 'image' %>
          <p> Sports </p>
        </div>
      <% end %>
    </div>

    <div class="col-4 p-1">
      <%= link_to activities_path(category:'Gastronomy') do %>
        <div class="card-categories">
          <%= image_tag "gastronomy_icon.png", class: 'image' %>
          <p> Gastronomy </p>
         </div>
      <% end %>
    </div>

    <div class="w-100 my-2"></div>

    <div class="col-4 p-1" >
      <%= link_to activities_path(category:'Leisure') do %>
        <div class="card-categories">
          <%= image_tag "leisure_icon.png", class: 'image' %>
          <p> Leisure </p>
        </div>
      <% end %>
    </div>

    <div class="col-4 p-1">
      <%= link_to activities_path(category:'Relaxation') do %>
        <div class="card-categories">
          <%= image_tag "relaxation_icon.png", class: 'relaxation' %>
          <p> Relaxation </p>
         </div>
       <% end %>
    </div>

    <div class="col-4 p-1">
      <%= link_to activities_path(category:'Concerts') do %>
        <div class="card-categories">
          <%= image_tag "music_icon.png", class: 'image' %>
          <p> Concerts </p>
        </div>
      <% end %>
    </div>
  </div>

  <h2 class="titles">Recommendations</h2>
  <% @activities = Activity.last(5) %>
  <% @activities.each do |activity| %>
    <a class="link-none" href="<%= activity_path(activity) %>">
      <div class="activity-card">
          <img src= <%=activity.photo_url %> />
        <div class="activity-infos">
          <h3 class="activity-title"><%=activity.title%></h3>
          <div class="activity-pricing">
            <h5 class="initial-price"> <%= activity.initial_price %>€ </h5>
            <h5 class="new-price"> <%= activity.price %>€ </h5>
          </div>
        </div>
      </div>
    </a>
  <% end %>
  <br>
</div>


