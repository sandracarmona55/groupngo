<div class="checkout-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1470753937643-efeb931202a9?ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80);">
My groups
</div>

<div class="activity-btns">
    <button class="activity-btn active" id="btn-join">Pending</button>
    <button class="activity-btn" id="btn-join">Upcoming</button>
    <button class="activity-btn" id="btn-description" >Past</button>
  </div>

<div class="container">
  <div class="activity-cards">
    <%  @bookings_pending.each do |booking| %>
      <div class="activity-card">
        <div class="activity-infos">
          <h3 class="group-title"><%=booking.group.activity.title%></h3>
          <p> <%= booking.group.date.strftime("%d/%m/%y - %H:%M")  %> </p>
          <div class="group-pricing d-flex justify-content-between">
            <h5> <%= booking.group.spots %> </h5>
            <h5 class="group-new-price"> <%= humanized_money_with_symbol(booking.group.activity.price) %> </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
